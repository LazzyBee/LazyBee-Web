<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	@external .NoticeBox_clean, .NoticeBox_Obj3;
	
	.NoticeBox_clean{}
	
	.NoticeBox_Obj1 {
		padding: 10px;
		background: lemonchiffon;
		position: absolute;
		z-index: 1;
		top: 40px;
		box-shadow: 0 4px 4px -2px #232323;
    	-moz-box-shadow: 0 4px 4px -2px #232323;
    	-webkit-box-shadow: 0 4px 4px -2px #232323;
    	display: inline-flex;
		display: -webkit-inline-flex;
		display: -ms-inline-flexbox;
	}
	
	.NoticeBox_Obj2 {
		display: inline-flex;
		display: -webkit-inline-flex;
		display: -ms-inline-flexbox;
	}
	
	.NoticeBox_Obj3 {
		color: gray;
		cursor: pointer;
		margin-left: 10px;
	}
	</ui:style>
	<g:HTMLPanel styleName="{style.NoticeBox_Obj1}">
		<g:HTMLPanel ui:field="lbNotice" styleName="{style.NoticeBox_Obj2}"></g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 