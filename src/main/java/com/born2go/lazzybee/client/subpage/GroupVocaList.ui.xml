<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	<ui:style>
	@external .GroupList_Obj3, .GroupList_Obj6_Disable, .GroupList_Obj10;
	.GroupList_Obj1 {
	}
	
	.GroupList_Obj2 {
		background: #e0e0e0;
		margin-bottom: 30px;
		border-top: 2px solid #6f7277;
	}
	
	.GroupList_Obj3 {
		height: 30px;
	}
	
	.GroupList_Obj4 {
		padding: 0px 10px 0px 10px;
    	color: white;
    	background-color: #0e74af;
    	line-height: 2.3;
    	font-weight: bold;
    	margin-top: -10px;
		float: right;
	}
	
	.GroupList_Obj5 {
		background: #0e74af;
		padding: 7px 10px;
		border-right: 1px silver solid;
		color: white;
		border-radius: 5px 0px 0px 5px;
	}
	
	.GroupList_Obj5:hover {
		background: silver;
		cursor: pointer;
		color: #0e74af;
	}
	
	.GroupList_Obj6 {
		background: #0e74af;
		padding: 7px 10px;
		border-right: 1px silver solid;
		color: white;
		border-radius: 0px 5px 5px 0px;
	}
	
	.GroupList_Obj6:hover {
		background: silver;
		cursor: pointer;
		color: #0e74af;
	}
	
	.GroupList_Obj6_Disable {
		background: silver;
		cursor: pointer;
		color: #0e74af;
	}
	
	.GroupList_Obj7 {
		float: left;
		position: relative;
		top: -12px;
		display: inline-flex;
		display: -webkit-inline-flex;
		display: -ms-inline-flexbox;
	}
	
	.GroupList_Obj8 {
		margin-left: 10px;
    	padding: 0px 10px 0px 10px;
    	color: white;
    	background-color: #0e74af;
    	line-height: 2.3;
    	font-weight: bold;
	}
	
	.GroupList_Obj9 {
		padding: 10px; 
		background-color: lemonchiffon; 
		line-height: 1.5;
		margin-bottom: 30px;
	}
	
	.GroupList_Obj10 {
		background: white;	
		border: 10px solid rgba(0, 150, 136, 0.6);
		box-shadow: 2px 3px 5px #999;
	}
	.GroupList_Obj11 {
    color: white !important;
    background: #0e74af;
    margin-left: 10px;
    padding: 9px 12px;
		}

		.GroupList_Obj11:hover {
		background: silver;
		cursor: pointer;
		color: #0e74af;
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.GroupList_Obj1}">
		<g:HTMLPanel styleName="{style.GroupList_Obj9}">
			<g:HTML><span style="font-weight: bold;">Bảng danh sách nhóm từ:</span> bao gồm các nhóm từ do người dùng thêm vào.</g:HTML>
		</g:HTMLPanel>
		<g:HTMLPanel>
			<g:HTMLPanel styleName="{style.GroupList_Obj7}">
				<g:Anchor ui:field="btnPreviousPage" title="Trang trước" styleName="{style.GroupList_Obj5}"><i class="fa fa-arrow-left fa-lg"></i></g:Anchor>
				<g:Anchor ui:field="btnNextPage" title="Trang sau" styleName="{style.GroupList_Obj6}"><i class="fa fa-arrow-right fa-lg"></i></g:Anchor>
				<g:Label ui:field="lbPageNumber" styleName="{style.GroupList_Obj8}"></g:Label>
				<g:Anchor  title="Thêm nhóm từ" styleName="{style.GroupList_Obj11}" href="http://www.lazzybee.com/editor/#group"><i class="fa fa-pencil-square-o fa-lg"></i></g:Anchor>
			</g:HTMLPanel>
			<!-- <g:Label ui:field="lbTotal" styleName="{style.GroupList_Obj4}"></g:Label> -->
		</g:HTMLPanel>
		
		<br/> <br/>
		
		<c:CellTable pageSize='1000' ui:field='groupTable' styleName="{style.GroupList_Obj2}"/>
	</g:HTMLPanel>
</ui:UiBinder> 